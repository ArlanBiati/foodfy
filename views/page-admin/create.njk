{% extends "page-admin/layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/page-admin/create.css">
{% endblock head %}

{% block title %}
    <title>Criar - Admin Foodfy</title>
{% endblock %}

{% block content %}

    <form action="">
        <div class="header-form">
            <h1>Editando receita</h1>
            <div class="buttons">
                <button type="submit" class="save">Salvar receita</button>
            </div>
        </div>

        <div class="inputs">
            <div class="input">
                <label for="recipe_url">Imagem da receita</label>
                <input type="url" name="recipe_url" value="" placeholder="http://...">
            </div>

            <div class="input">
                <label for="ingredients">Ingredientes</label>
                <input type="text" name="ingredients[]" value="" placeholder="Ingredientes">
                <a href="#">+ novo ingrediente</a> <!--alterar a tag A para button-->
            </div>

            <div class="input">
                <label for="preparation">Modo de preparo</label>
                <input type="url" name="preparation[]" value="" placeholder="Modo de preparo">
                <a href="#">+ novo passo</a> <!--alterar a tag A para button-->
            </div>

            <div class="input">
                <label for="informations">Informações adicionais</label>
                <textarea name="informations"></textarea>
            </div>
        </div>
    </form>
{% endblock %}