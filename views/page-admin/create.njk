{% extends "page-admin/layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/page-admin/create.css">
{% endblock head %}

{% block title %}
    <title>Criar - Admin Foodfy</title>
{% endblock %}

{% block content %}

    <form method="POST" action="/admin/recipes">
        <div class="header-form">
            <h1>Criar receita</h1>
            <div class="buttons">
                <button type="submit" class="save">Salvar receita</button>
            </div>
        </div>

        <div class="inputs">
            <div class="input">
                <label for="image">Imagem da receita</label>
                <input type="url" name="image" value="" placeholder="http://...">
            </div>

            <div class="input">
                <label for="title">Imagem da receita</label>
                <input type="text" name="title" value="" placeholder="Nome da receita">
            </div>

            <div class="input">
                <label for="ingredients">Ingredientes</label>
                <input type="text" name="ingredients[]" value="" placeholder="Ingredientes">
                <a href="#">+ novo ingrediente</a>
                <!--alterar a tag A para button-->
            </div>

            <div class="input">
                <label for="preparations">Modo de preparo</label>
                <input type="text" name="preparations[]" value="" placeholder="Modo de preparo">
                <a href="#">+ novo passo</a>
                <!--alterar a tag A para button-->
            </div>

            <div class="input">
                <label for="information">Informações adicionais</label>
                <textarea name="information"></textarea>
            </div>
        </div>
    </form>
{% endblock %}