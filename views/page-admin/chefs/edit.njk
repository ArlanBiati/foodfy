{% extends "page-admin/layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/page-admin/chefs/edit.css">
{% endblock head %}

{% block title %}
    <title>Editar - Admin Foodfy</title>
{% endblock %}

{% block content %}

    <form action="/admin/chefs?_method=DELETE" method="POST">
        <div class="buttons">
            <button type="submit" class="delete">Deletar</button>
        </div>
        <input type="hidden" name="id" value="{{chef.id}}">
    </form>

    <form action="/admin/chefs?_method=PUT" method="POST">
        <div class="header-form">
            <h1>Editando chef</h1>
            <div class="buttons">
                <button type="submit" class="save">Salvar chef</button>
            </div>
        </div>

        <div class="inputs">
            <div class="input">
                <label for="name">Nome</label>
                <input type="text" name="name" value="{{ chef.name }}" placeholder="Nome do chef">
            </div>

            <div class="input">
                <label for="avatar_url">Avatar</label>
                <input type="url" name="avatar_url" value="{{ chef.avatar_url }}" placeholder="http://...">
            </div>
        </div>
        <input type="hidden" name="id" value="{{chef.id}}">
    </form>

{% endblock %}