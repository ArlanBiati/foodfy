{% extends "page-client/layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/page-client/chefs.css">
{% endblock head %}

{% block title %}
  <title>Chefs - Foodfy</title>
{% endblock %}}

{% block content %}
  <section>
    <div class="grid">
      {% for chef in chefs %}
        <div class="chef">
          <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
          <div>
            <h2>{{chef.name}}</h2>
            <h3>numero de receitas</h3>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock content %}