{% extends "layout.njk" %}

{% block head %}
    <title>Receita - Foodfy</title>
{% endblock %}

{% block content%}
    <section class="recipes">
        <div class="flex">

            
            <div class="banner-recipe">
                <img src="{{recipe.image}}" alt="{{recipe.title}}">
                <h1>{{recipe.title}}</h1>
                <h2>por {{recipe.author}}</h2>
            </div>

            <div class="section ingredients abas-description">
                <div class="description ingredients">
                    <h1>Ingredientes</h1>
                    <h2>Esconder</h2>
                </div>

                <ul>
                    {% for ingredients in recipe.ingredients %}
                    <li>{{ingredients}}</li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="section preparation abas-description">
                <div class="description preparation">
                    <h1>Modo de preparo</h1>
                    <h2>Esconder</h2>
                </div>

                <ul>
                    <li>{{recipe.preparation}}</li>
                </ul>
            </div>

            <div class="section information abas-description">
                <div class="description information">
                    <h1>Informações adicionais</h1>
                    <h2>Esconder</h2>
                </div>

                <p>{{recipe.information}}</p>
            </div>
            

        </div>
    </section>
{% endblock %}