{% extends "page-admin/layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/page-admin/chefs/detail.css">
{% endblock head %}

{% block title %}
    <title>Detalhes - Admin Foodfy</title>
{% endblock %}

{% block content %}

    <section class="chef" id="{{chef.id}}">

        <div class="edit">
            <h1>Chef:
                {{ chef.name }}</h1>
            <a href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
        </div>

        <div class="banner-chef">
            <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
            <h1>{{chef.name}}</h1>
            <h3>{{chef.total_recipes}}</h3>
        </div>

        <h2>Receitas</h2>

        <div class="grid">
            {% for recipe in recipes %}
                <div class="recipe">
                    <img src="{{recipe.image}}" alt="{{recipe.title}}">
                    <div>
                        <h2>{{recipe.title}}</h2>
                        <h4>por
                            {{recipe.chef_name}}</h4>
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>

    </section>
{% endblock %}