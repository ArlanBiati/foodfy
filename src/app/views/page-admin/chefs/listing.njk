{% extends "page-admin/layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/page-admin/chefs/listing.css">
{% endblock head %}

{% block title %}
    <title>Listagem - Admin Foodfy</title>
{% endblock %}

{% block content %}

    <section class="chefs">

        <div class="header-chefs">
            <h1>Gerenciar chefs</h1>
            <a href="/admin/chefs/create">+ Novo chef</a>
        </div>

        <div class="grid">

            {% for chef in chefs %}
                <div class="chef">
                    <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
                    <div>
                        <h2>{{chef.name}}</h2>
                        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}

        </div>
    </section>
{% endblock %}